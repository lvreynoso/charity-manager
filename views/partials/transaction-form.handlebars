<!-- transaction-form.handlebars -->

<fieldset>
    <legend>New Transaction</legend>
    <div class="form-group">
        <label for="charity">Charity:</label><br>
        <input id="charity" type="text" name="charity" value="{{charity}}"/>
    </div>

    <div class="form-group">
        <label for="amount">Amount:</label><br>
        <input id="amount" type="text" name="amount" value="{{amount}}"/>
    </div>

    <!-- shoutout to Mozilla for the following date picker code -->
    <div class="nativeDatePicker">
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="{{date}}">
        <span class="validity"></span>
    </div>
    <p class="fallbackLabel">Date:</p>
    <div class="fallbackDatePicker">
        <span>
            <label for="day">Day:</label>
            <select id="day" name="day"></select>
        </span>
        <span>
        <label for="month">Month:</label>
        <select id="month" name="month">
          <option>January</option>
          <option>February</option>
          <option>March</option>
          <option>April</option>
          <option>May</option>
          <option>June</option>
          <option>July</option>
          <option>August</option>
          <option>September</option>
          <option>October</option>
          <option>November</option>
          <option>December</option>
        </select>
        </span>
        <span>
        <label for="year">Year:</label>
        <select id="year" name="year"></select>
        </span>
        <span>
            <input type="hidden" name="fallback" value=true>
        </span>
    </div>
    <br>

    <div class="form-group">
        <label for="recurring">Recurring:</label><br>
        <input type="radio" name="recurring" value=false checked>No<br>
        <input type="radio" name="recurring" value=true>Yes<br>
    </div>
</fieldset>
<div class="form-group">
    <button class="btn btn-primary" type="submit">Save Transaction</button>
</div>
