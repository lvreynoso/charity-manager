<!-- master CRUD maker -->

<div class="container">
    <div class="row">
        <div class="col-auto"><h1>Admin</h1>
        </div>
    </div>


    <div class="row">
        <div class="col-auto"><h2>Set</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <form action="/accounts" method="post">
                <fieldset>
                    <legend>New Account</legend>
                    <div class="form-group">
                        <label for="firstName">First Name</label><br>
                        <input id="firstName" type="text" name="firstName" value="{{first}}"/>
                    </div>
                        <div class="form-group">
                            <label for="lastName">Last Name</label><br>
                            <input id="rlastName" type="text" name="lastName" value="{{last}}"/>
                    </div>
                </fieldset>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save Account</button>
                </div>
            </form>
        </div>



    </div>
    <div class="row">
        <div class="col-auto"><h2>Get</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">User:</div>
        <div class="col-auto">{{user.name}}</div>
        <div class="col-auto">{{user._id}}</div>
    </div>
    <div class="row">
        <div class="col-sm-3">Accounts:</div>
        <div class="col-auto">
            {{#each accounts}}
                {{> admin-accounts}}
            {{/each}}
        </div>
    </div>
</div>
