<!-- accounts.handlebars -->

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Accounts</h1>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <form class="form-group" action="/accounts/new" method="get">
            <h6><button class="btn btn-primary" type="submit" name="new-account">New Account</button></h6>
            </form>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-12">
            {{#each accounts}}
                <h3><a href="/accounts/{{this.slug}}">{{this.name.full}}</a></h3>
            {{/each}}
        </div>
    </div>
</div>
